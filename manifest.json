{
  "manifest_version": 3,
  "name": "Trunic Translator",
  "description": "Translate pages into Trunic",
  "version": "1.0.0",
  "author": "Christian Wells",
  "icons": {
  },
  "background": {
  },
  "content_scripts": [
    {
      "matches": ["https://*.com/*"],
      "css": ["resources/font.css"],
      "run_at": "document_end"
    }
  ],
    "web_accessible_resources": [
        {
            "resources": [
                "resources/Trunic.woff",
                "resources/en_US.txt"
            ],
            "matches": ["https://*.com/*"],
            "extension_ids": ["bkfjlfblaiimelnnkfmloabiajbnadee"]
          }
        
    ],
  "permissions": [
    "declarativeContent",
    "storage",
    "notifications",
    "webNavigation",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}